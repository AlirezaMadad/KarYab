<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
app:layout_behavior="@string/appbar_scrolling_view_behavior">



<TextView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:id="@+id/textViewWorkLocationName"

    android:text="@string/workLocationName" />

<AutoCompleteTextView
    android:layout_height="47dp"
    android:layout_width="match_parent"
    android:id="@+id/experienceLocationNameAutoCompleteTextView"
    android:layout_x="-1dp"
    android:layout_y="32dp"
    android:layout_below="@+id/textViewWorkLocationName" />



    <TextView
        android:layout_height="24dp"
        android:layout_width="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="مدت همکاری به ماه"
        android:id="@+id/textViewWorkDuration"
        android:layout_x="299dp"
        android:layout_y="87dp"
        android:layout_alignRight="@+id/experienceLocationNameAutoCompleteTextView"
        android:layout_alignEnd="@+id/experienceLocationNameAutoCompleteTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/experienceLocationNameAutoCompleteTextView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextWorkDuration"
        android:layout_below="@+id/textViewWorkDuration"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textViewWorkDuration"
        android:layout_alignEnd="@+id/textViewWorkDuration" />

</RelativeLayout>
